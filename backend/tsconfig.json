{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",  // Changed from "./src" to include test files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@logic/*": ["src/logic/*"],
      "@types/*": ["src/types/*"]
    },
    "types": ["jest"],  // Added to include Jest types globally
    "moduleResolution": "node"  // Explicitly set module resolution
  },
  "include": ["src/**/*", "test/**/*"],  // Added test files to compilation
  "exclude": ["node_modules"]
}
